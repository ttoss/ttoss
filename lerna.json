{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "stream": true,
  "command": {
    "publish": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "ignoreChanges": [
        "**/docs/**",
        "**/__fixtures__/**",
        "**/__tests__/**",
        "**/*.md"
      ],
      "message": "chore(release): publish packages",
      "noPrivate": true
    }
  }
}
