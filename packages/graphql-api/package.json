{
  "name": "@ttoss/graphql-api",
  "version": "0.7.8",
  "description": "A library for building GraphQL APIs using ttoss ecosystem.",
  "license": "MIT",
  "author": "ttoss",
  "contributors": [
    "Pedro Arantes <pedro@arantespp.com> (https://arantespp.com)"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ttoss/ttoss.git",
    "directory": "packages/graphql-api"
  },
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./shield": "./src/shield.ts"
  },
  "bin": {
    "ttoss-graphql-api": "./bin/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build-config": "tsup-node",
    "test": "jest --projects tests/unit"
  },
  "sideEffects": false,
  "dependencies": {
    "@graphql-codegen/core": "^4.0.2",
    "@graphql-codegen/typescript": "^4.1.2",
    "@ttoss/ids": "workspace:^",
    "esbuild": "^0.24.0",
    "graphql-compose": "^9.0.11",
    "graphql-compose-connection": "^8.2.1",
    "graphql-middleware": "^6.1.35",
    "graphql-shield": "^7.6.5",
    "npmlog": "^7.0.1"
  },
  "peerDependencies": {
    "graphql": "^16.6.0"
  },
  "devDependencies": {
    "@ttoss/config": "workspace:^",
    "graphql": "^16.9.0",
    "jest": "^29.7.0",
    "tsup": "^8.3.5"
  },
  "keywords": [
    "api",
    "graphql"
  ],
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "import": "./dist/esm/index.js",
        "require": "./dist/index.js",
        "types": "./dist/index.d.ts"
      },
      "./shield": {
        "import": "./dist/esm/shield.js",
        "require": "./dist/shield.js",
        "types": "./dist/shield.d.ts"
      }
    },
    "provenance": true
  }
}
