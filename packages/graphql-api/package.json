{
  "name": "@ttoss/graphql-api",
  "version": "0.6.1",
  "description": "A library for building GraphQL APIs using ttoss ecosystem.",
  "author": "ttoss",
  "contributors": [
    "Pedro Arantes <pedro@arantespp.com> (https://arantespp.com)"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ttoss/ttoss.git",
    "directory": "packages/graphql-api"
  },
  "exports": {
    ".": "./src/index.ts",
    "./shield": "./src/shield.ts"
  },
  "bin": {
    "ttoss-graphql-api": "./bin/cli.js"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "test": "jest"
  },
  "sideEffects": false,
  "dependencies": {
    "@graphql-codegen/core": "^4.0.2",
    "@graphql-codegen/typescript": "^4.0.6",
    "@ttoss/ids": "workspace:^",
    "graphql-compose": "^9.0.10",
    "graphql-compose-connection": "^8.2.1",
    "graphql-middleware": "^6.1.35",
    "graphql-shield": "^7.6.5",
    "npmlog": "^7.0.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "yargs": "^17.7.2"
  },
  "peerDependencies": {
    "graphql": "^16.6.0"
  },
  "devDependencies": {
    "@ttoss/config": "workspace:^",
    "@types/yargs": "^17.0.32",
    "graphql": "^16.8.1",
    "jest": "^29.7.0",
    "tsup": "^8.0.2"
  },
  "keywords": [
    "api",
    "graphql"
  ],
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "import": "./dist/esm/index.js",
        "require": "./dist/index.js",
        "types": "./dist/index.d.ts"
      },
      "./shield": {
        "import": "./dist/esm/shield.js",
        "require": "./dist/shield.js",
        "types": "./dist/shield.d.ts"
      }
    },
    "provenance": true
  }
}
