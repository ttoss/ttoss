{
  "name": "@ttoss/test-utils",
  "version": "1.21.1",
  "description": "This package provides a number of utilities and re-exports for testing using Jest, React Testing Library, and Relay.",
  "license": "UNLICENSED",
  "author": "ttoss",
  "contributors": [
    "Pedro Arantes <pedro@arantespp.com> (https://arantespp.com/contact)"
  ],
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/index.js"
    },
    "./faker": {
      "import": "./dist/esm/faker.js",
      "require": "./dist/faker.js"
    },
    "./relay": {
      "import": "./dist/esm/relay.js",
      "require": "./dist/relay.js"
    }
  },
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "test": "jest"
  },
  "typings": "dist/index.d.ts",
  "dependencies": {
    "@emotion/jest": "^11.10.5",
    "@faker-js/faker": "^7.6.0",
    "@testing-library/dom": "^9.2.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/relay-test-utils": "^14.1.0",
    "jest-environment-jsdom": "^29.5.0",
    "relay-test-utils": "^15.0.0"
  },
  "peerDependencies": {
    "jest": ">=29.0.0",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@ttoss/config": "^1.29.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-node": "^10.9.1"
  },
  "keywords": [
    "Jest",
    "React",
    "React Testing Library",
    "Storybook"
  ],
  "publishConfig": {
    "access": "public"
  },
  "typesVersions": {
    "*": {
      ".": [
        "./dist/index.d.ts"
      ],
      "faker": [
        "./dist/faker.d.ts"
      ],
      "relay": [
        "./dist/relay.d.ts"
      ]
    }
  }
}
