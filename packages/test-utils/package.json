{
  "name": "@ttoss/test-utils",
  "version": "4.0.3",
  "description": "This package provides a number of utilities and re-exports for testing using Jest, React Testing Library, and Relay.",
  "license": "MIT",
  "author": "ttoss",
  "contributors": [
    "Pedro Arantes <pedro@arantespp.com> (https://arantespp.com/contact)"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ttoss/ttoss.git",
    "directory": "packages/test-utils"
  },
  "type": "commonjs",
  "exports": {
    ".": "./src/index.ts",
    "./faker": "./src/faker.ts",
    "./react": "./src/react.ts",
    "./relay": "./src/relay.ts"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "jest"
  },
  "dependencies": {
    "@emotion/jest": "^11.14.2",
    "@faker-js/faker": "^10.3.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/relay-test-utils": "^19.0.0",
    "jest-environment-jsdom": "^30.2.0",
    "relay-test-utils": "^20.1.1",
    "resize-observer-polyfill": "^1.5.1"
  },
  "peerDependencies": {
    "jest": "^30.0.0",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@ttoss/config": "workspace:^",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.13",
    "@types/react": "^19.2.14",
    "jest": "^30.2.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.1"
  },
  "keywords": [
    "Jest",
    "React",
    "React Testing Library",
    "Storybook"
  ],
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "import": "./dist/esm/index.js",
        "require": "./dist/index.js",
        "types": "./dist/index.d.ts"
      },
      "./faker": {
        "import": "./dist/esm/faker.js",
        "require": "./dist/faker.js",
        "types": "./dist/faker.d.ts"
      },
      "./react": {
        "import": "./dist/esm/react.js",
        "require": "./dist/react.js",
        "types": "./dist/react.d.ts"
      },
      "./relay": {
        "import": "./dist/esm/relay.js",
        "require": "./dist/relay.js",
        "types": "./dist/relay.d.ts"
      }
    },
    "provenance": true
  }
}
