{
  "name": "@ttoss/test-utils",
  "version": "2.1.23",
  "description": "This package provides a number of utilities and re-exports for testing using Jest, React Testing Library, and Relay.",
  "license": "MIT",
  "author": "ttoss",
  "contributors": [
    "Pedro Arantes <pedro@arantespp.com> (https://arantespp.com/contact)"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ttoss/ttoss.git",
    "directory": "packages/test-utils"
  },
  "exports": {
    ".": "./src/index.ts",
    "./faker": "./src/faker.ts",
    "./relay": "./src/relay.ts"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "jest"
  },
  "dependencies": {
    "@emotion/jest": "^11.13.0",
    "@faker-js/faker": "^9.3.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/relay-test-utils": "^18.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "relay-test-utils": "^18.2.0",
    "resize-observer-polyfill": "^1.5.1"
  },
  "peerDependencies": {
    "jest": "^29.0.0",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@ttoss/config": "workspace:^",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.2",
    "jest": "^29.7.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.5"
  },
  "keywords": [
    "Jest",
    "React",
    "React Testing Library",
    "Storybook"
  ],
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "import": "./dist/esm/index.js",
        "require": "./dist/index.js",
        "types": "./dist/index.d.ts"
      },
      "./faker": {
        "import": "./dist/esm/faker.js",
        "require": "./dist/faker.js",
        "types": "./dist/faker.d.ts"
      },
      "./relay": {
        "import": "./dist/esm/relay.js",
        "require": "./dist/relay.js",
        "types": "./dist/relay.d.ts"
      }
    },
    "provenance": true
  }
}
