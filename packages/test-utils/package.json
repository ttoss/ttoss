{
  "name": "@ttoss/test-utils",
  "version": "1.24.1",
  "description": "This package provides a number of utilities and re-exports for testing using Jest, React Testing Library, and Relay.",
  "author": "ttoss",
  "contributors": [
    "Pedro Arantes <pedro@arantespp.com> (https://arantespp.com/contact)"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ttoss/ttoss.git",
    "directory": "packages/test-utils"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/index.js"
    },
    "./faker": {
      "import": "./dist/esm/faker.js",
      "require": "./dist/faker.js"
    },
    "./relay": {
      "import": "./dist/esm/relay.js",
      "require": "./dist/relay.js"
    }
  },
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "test": "jest"
  },
  "typings": "dist/index.d.ts",
  "dependencies": {
    "@emotion/jest": "^11.11.0",
    "@faker-js/faker": "^8.3.1",
    "@testing-library/dom": "^9.3.3",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/relay-test-utils": "^14.1.4",
    "jest-environment-jsdom": "^29.7.0",
    "relay-test-utils": "^16.0.0",
    "resize-observer-polyfill": "^1.5.1"
  },
  "peerDependencies": {
    "jest": "^29.0.0",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@ttoss/config": "workspace:^",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.9.4",
    "@types/react": "^18.2.38",
    "jest": "^29.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-node": "^10.9.1",
    "tsup": "^8.0.1"
  },
  "keywords": [
    "Jest",
    "React",
    "React Testing Library",
    "Storybook"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "typesVersions": {
    "*": {
      ".": [
        "./dist/index.d.ts"
      ],
      "faker": [
        "./dist/faker.d.ts"
      ],
      "relay": [
        "./dist/relay.d.ts"
      ]
    }
  }
}
