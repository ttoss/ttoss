{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": [
    "AWS_*",
    "CARLIN_*",
    "ENVIRONMENT",
    "NODE_ENV",
    "TTOSS_MONOREPO"
  ],
  "tasks": {
    "build-config": {
      "dependsOn": ["^build-config"],
      "outputs": ["dist/**"]
    },
    "i18n": {
      "dependsOn": ["@ttoss/i18n-cli#build-config"],
      "outputs": ["i18n/lang/**"]
    },
    "build": {
      "dependsOn": ["^build", "i18n"],
      "outputs": ["dist/**", "build/**", ".next/**", "storybook-static/**"]
    },
    "test": {
      "dependsOn": ["i18n"],
      "outputs": [],
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "tests/**/*.ts",
        "tests/**/*.tsx"
      ]
    },
    "deploy": {
      "dependsOn": ["i18n", "build", "carlin#build", "^deploy"],
      "outputs": [".carlin/**"]
    }
  }
}
