{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "//#lint": {
      "dependsOn": ["@ttoss/config#build"],
      "outputs": []
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**", "dist/**", ".next/**", "storybook-static/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "tests/**/*.ts",
        "tests/**/*.tsx"
      ]
    },
    "deploy": {
      "dependsOn": ["//#lint", "build", "test"],
      "outputs": [".carlin/**"]
    }
  }
}
