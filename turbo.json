{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": ["CARLIN_ENVIRONMENT"],
  "pipeline": {
    "//#build:config": {
      "dependsOn": [],
      "outputs": ["dist/**"]
    },
    "//#lint": {
      "dependsOn": ["//#build:config"],
      "outputs": []
    },
    "//#syncpack:list": {
      "dependsOn": ["//#build:config"],
      "outputs": []
    },
    "topo": {
      "dependsOn": ["//#build:config", "//#lint", "//#syncpack:list"],
      "outputs": []
    },
    "i18n": {
      "dependsOn": ["topo", "^build"],
      "outputs": ["i18n/lang/**"]
    },
    "build": {
      "dependsOn": ["topo", "i18n"],
      "outputs": ["build/**", "dist/**", ".next/**", "storybook-static/**"]
    },
    "test": {
      "dependsOn": ["topo", "i18n"],
      "outputs": [],
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "tests/**/*.ts",
        "tests/**/*.tsx"
      ]
    },
    "deploy": {
      "dependsOn": ["i18n", "build", "test", "carlin#build", "^deploy"],
      "outputs": [".carlin/**"]
    }
  }
}
