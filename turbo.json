{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": ["CARLIN_ENVIRONMENT", "ENVIRONMENT"],
  "tasks": {
    "//#build:config": {
      "dependsOn": [],
      "outputs": ["packages/config/dist/**"]
    },
    "//#lint": {
      "dependsOn": ["//#build:config"],
      "cache": false
    },
    "//#syncpack:list": {
      "dependsOn": [],
      "outputs": []
    },
    "build-config": {
      "dependsOn": ["//#build:config"],
      "outputs": ["dist/**"]
    },
    "topo": {
      "dependsOn": [
        "//#build:config",
        "//#lint",
        "//#syncpack:list",
        "build-config"
      ],
      "outputs": []
    },
    "i18n": {
      "dependsOn": ["topo"],
      "outputs": ["i18n/lang/**"]
    },
    "build": {
      "dependsOn": ["topo", "i18n"],
      "outputs": ["dist/**", "build/**", ".next/**", "storybook-static/**"]
    },
    "test": {
      "dependsOn": ["topo", "i18n"],
      "outputs": [],
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "tests/**/*.ts",
        "tests/**/*.tsx"
      ]
    },
    "deploy": {
      "dependsOn": [
        "topo",
        "i18n",
        "build",
        "test",
        "carlin#build",
        "carlin#test",
        "^deploy"
      ],
      "outputs": [".carlin/**"]
    }
  }
}
