{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "//#cdvc": {
      "outputs": []
    },
    "//#lint": {
      "dependsOn": ["@ttoss/config#build"],
      "outputs": []
    },
    "build": {
      "dependsOn": ["//#cdvc", "^build"],
      "outputs": ["build/**", "dist/**", ".next/**", "storybook-static/**"]
    },
    "test": {
      "dependsOn": ["//#cdvc", "build"],
      "outputs": [],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
    },
    "deploy": {
      "dependsOn": [
        "//#lint",
        "carlin#build",
        "carlin#test",
        "build",
        "test",
        "^deploy"
      ],
      "outputs": [".carlin/**"]
    }
  }
}
