{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": [
    "AWS_*",
    "CARLIN_*",
    "ENVIRONMENT",
    "NODE_ENV",
    "TTOSS_MONOREPO"
  ],
  "tasks": {
    "build-config": {
      "dependsOn": ["^build-config"],
      "outputs": ["dist/**"]
    },
    "i18n": {
      "dependsOn": ["@ttoss/i18n-cli#build-config"],
      "outputs": ["i18n/**"]
    },
    "build": {
      "dependsOn": ["^build", "i18n"],
      "outputs": ["dist/**", "build/**", ".next/**", "storybook-static/**"]
    },
    "@docs/website#build": {
      "inputs": ["**/*", "../packages/*/README.md"]
    },
    "test": {
      "dependsOn": ["i18n", "build-config"],
      "outputs": []
    },
    "deploy": {
      "dependsOn": ["i18n", "build", "carlin#build", "^deploy"],
      "outputs": [".carlin/**"]
    }
  }
}
